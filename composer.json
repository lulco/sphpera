{
    "name": "lulco/sphpera",
    "require": {
        "php": ">= 7.3",
        "nikic/php-parser": "^4.6"
    },
    "autoload": {
        "psr-4": {
            "Sphpera\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SphperaTest\\": [
                "tests/"
            ]
        }
    },
    "require-dev": {
        "ext-curl": "*",
        "ext-pdo": "*",
        "phpunit/phpunit": "^9.2",
        "guzzlehttp/guzzle": "^7.0"
    }
}
